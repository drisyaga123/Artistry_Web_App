@{
    ViewData["Title"] = "Seller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex justify-content-center align-items-center p-3">
    <div class="card shadow">
        <div class="p-4">
            <div class="title d-flex justify-content-center align-items-center mt-3">
                <h1>SIGN UP</h1>
            </div> <div class="form-group mb-2">
                <label for="inlineRadio1">Register as:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="rdArtist" value="option1">
                    <label class="form-check-label" for="rdArtist">Artist</label>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="rdOrganization" value="option2">
                        <label class="form-check-label" for="rdOrganization">Organization</label>
                    </div>
                </div>
            </div>
            <!-- Email input -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-outline mb-1 position-relative ">
                        <label class="form-label" for="seller_Name">Name</label>
                        <input type="text" id="seller_Name" class="form-control" />
                        <div class="invalid-tooltip position-static" id="name-error"></div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline mb-1 position-relative">
                        <label class="form-label" for="seller_Email">Email</label>
                        <input type="text" id="seller_Email" class="form-control" />
                        <div class="invalid-tooltip position-static" id="email-error"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">

                    <div class="form-outline mb-1 position-relative ">
                        <label class="form-label" for="seller_Psd">Password</label>
                        <input type="password" id="seller_Psd" class="form-control" />
                        <div class="invalid-tooltip position-static" id="pswd-error"></div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-outline mb-1 position-relative">
                        <label class="form-label" for="seller_CPsd">Confirm Password</label>
                        <input type="password" id="seller_CPsd" class="form-control" />
                        <div class="invalid-tooltip position-static" id="cpswd-error"></div>

                    </div>
                </div>
            </div>



            <div class="form-outline mb-1 position-relative">
                <label class="form-label" for="seller_Bio">Bio</label>
                <textarea class="form-control" id="seller_Bio" rows="4"></textarea>
                <div class="invalid-tooltip position-static" id="bio-error"></div>

            </div>
            <div class="form-outline mb-1 d-none position-relative" id="divOrgaztn">
                <label class="form-label" for="seller_Org">Organization</label>
                <input type="text" id="seller_Org" class="form-control" />
                <div class="invalid-tooltip position-static" id="org-error"></div>

            </div>



            <!-- Password input -->
            <!-- Submit button -->
            <div class="text-center d-grid gap-2">
                <button type="button" class="btn btn-primary mt-2" onclick="registerSeller()">Submit</button>

            </div>

            <!-- Register buttons -->
            <div class="text-center mb-3">
                <p>Already you have account <a href="~/Login/UserLogin" class="reg text-decoration-none">Login in</a></p>


            </div>
        </div>
       

    </div>
</div>
<script src="~/js/registerseller.js"></script>

