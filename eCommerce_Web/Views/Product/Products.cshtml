
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="section-products">
	<div class="container-fluid">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="header">
                    <h3>Popular Products</h3>
                </div>
            </div>

        </div>
        <hr />
		<div class="row">

			<div class="col-10">
			<div class="card mb-1">
                    <div class="card-body" style="height: 67vh; overflow-y: auto;">

                        <div class="row" id="prodListRow">
                        </div>
                        <div class="row" id="paginationRow">
                        </div>
</div>
            </div>
			</div>
            <div class="col-2">
			<div class="card">
				<div class="card-body p-0">
                   
                        <div class="row justify-content-center text-center">
                            <div class="col-md-8 col-lg-6">
                                <div class="header">
                                    <h3>Filters</h3>
                                </div>
                            </div>

                        </div>
                        <div class="row ms-3">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-btn="price"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Price
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="0-499" />
                                                <label class="form-check-label" for="Checkme1">0-499</label>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="500-999" />
                                                <label class="form-check-label" for="Checkme2">500-999</label>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value=">1000"/>
                                                <label class="form-check-label" for="Checkme2">Above 1000</label>
                                            </div>
                                        </a>
                                    </li>
                                    
                                </ul>
                            </div>
                        </div>
                        <div class="row ms-3 mt-3">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-btn="category"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Category
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="Paintings" />
                                                <label class="form-check-label" for="Checkme1">Paintings</label>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="Equipments" />
                                                <label class="form-check-label" for="Checkme2">Equipments</label>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="Sculptures" />
                                                <label class="form-check-label" for="Checkme2">Sculptures</label>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row mt-3 ms-3 mb-5">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-btn="subcategory"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    Sub Category
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="Modern" />
                                                <label class="form-check-label" for="Checkme1">Modern</label>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="form-check">
                                                <input class="form-check-input cbFilter" type="checkbox" value="Traditional" />
                                                <label class="form-check-label" for="Checkme2">Traditional</label>
                                            </div>
                                        </a>
                                    </li>
              
                               
                                </ul>
                            </div>
                        </div>
                      
                    </div>
				</div>
			</div>
		</div>
		
	</div>
</section>
@section Scripts{
	<script src="~/js/productlist.js"></script>
}
