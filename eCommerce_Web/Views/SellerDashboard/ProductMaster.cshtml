
@{
    ViewData["Title"] = "ProductMaster";
    Layout = "~/Views/Shared/_SellerdashboardLayout.cshtml";
}

<!-- Modal -->
<div class="modal fade" id="viewProdImg" tabindex="-1" role="dialog" aria-labelledby="viewProdImgLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img id="prod_image" style="max-width: 100%; max-height: 100%; width: auto; height: auto;" />
             </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-between">
                <h5 class="modal-title" id="exampleModalLabel">PRODUCT DETAILS</h5>
                <button type="button" class="closeModal" data-dismiss="modal" aria-label="closeModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
       
                <div class="form-group mb-2 required">
                    <label class="col-md-4 control-label" for="product_name">Product Name</label>
                    <input id="product_name" name="product_name" class="form-control" required="" type="text">

                    <div class="col-md-12" id="product-name-error">
                        
                    </div>
                </div>

                <div class="form-group mb-2 required">
                    <label class="col-md-4 control-label" for="product_desc">Description</label>
                    <textarea id="product_desc" name="product_desc" class="form-control"></textarea>

                    <div class="col-md-12" id="description-error">
                        
                    </div>
                </div>
                <div class="form-group mb-2 required">
                    <label class="col-md-4 control-label" for="product_category">Category</label>
                       <select id="product_category" name="product_category" class="form-select form-control">
                        <option selected disabled>Select Category</option>
                        <option value="Paintings">Paintings</option>
                        <option value="Equipments">Equipments</option>
                        <option value="Sculptures">Sculptures</option>
                        </select>
                    <div class="col-md-12 " id="category-error">
                    </div>
                </div>
                <div class="form-group mb-2 d-none required">
                    <label class="col-md-4 control-label" for="product_sub_category">Sub Category</label>
                        <select id="product_sub_category" name="product_sub_category" class="form-select form-control">
                        <option selected disabled>Select SubCategory</option>
                        <option value="Modern">Modern</option>
                        <option value="Traditional">Traditional</option>
                        </select>
                    <div class="col-md-12" id="category-error">
                    </div>
                </div>
                <div class="form-group mb-2 required">
                    <label class="col-md-4 control-label" for="product_Mrp">MRP Rate</label>
                    <input id="product_Mrp" name="product_Mrp" class="form-control" required="" type="text">

                    <div class="col-md-12" id="product-mrp-error">
                    </div>
                </div>
                <div class="form-group mb-2 required">
                    <label class="col-md-4 control-label" for="product_Sellingprice">Selling Rate</label>
                    <input id="product_Sellingprice" name="product_Sellingprice" class="form-control" required="" type="text">

                    <div class="col-md-12" id="product-sellingprice-error">
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-md-4 control-label" for="prodfilebutton">Upload</label>
                    <div class="d-flex justify-content-between align-items-baseline d-none" id="imgEditDiv">
                        <label id="imgName" class="overflow-auto"></label>
                        <button class="btn" onclick="enableImgEdit()"><i class="fa fa-pencil ms-1" aria-hidden="true"></i></button>
                       
                    </div>
                    <div class="d-flex justify-content-between align-items-baseline" id="imgUploadDiv">
                        <input id="prodfilebutton" name="prodfilebutton" class="input-file form-control" type="file">
                        <button class="btn d-none" id="closeEdit" onclick="closeImgEdit()"><i class="fa fa-times" aria-hidden="true"></i></button>
                    </div>
                   
                    <div class="col-md-12" id="image-error">
                         </div>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center mb-3 mx-2">
                <div class="row col-12">
                    <div class="col-6">
                        <button class="btn btn-primary btn-block w-100" onclick="addProduct()" id="btnAddProd">Add</button>
                        <button class="btn btn-primary btn-block w-100 d-none" onclick="updateProduct()" id="btnUpdateProd">Update</button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-warning btn-block w-100" id="btnCloseModal" onclick="closeModal()">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<div class="content_page">
   <div class="row justify-content-end mb-2">
    <div class="col-auto">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
  Add Product
</button>
</div></div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">SubCategory</th>
                <th scope="col">M.R.P</th>
                <th scope="col">Selling Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody id="tBodyProducts">
           
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/productmaster.js"></script>
}
