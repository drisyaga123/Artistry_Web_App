@{
    ViewData["Title"] = "SellerDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content_page">
   <div class="container">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">SELLER NAME</th>

                    <th scope="col">ADDED PRODUCTS</th>

                </tr>
            </thead>
            <tbody id="sellerRecords">
            </tbody>
        </table>
   </div>
</div>

<!-- Modal -->
<div class="modal" id="viewProductsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="container">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">PRODUCT NAME</th>
                            <th scope="col">DESCRIPTION</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">SUBCATEGORY</th>
                            <th scope="col">MRP</th>
                            <th scope="col">SELLING PRICE</th>

                            <th scope="col">ADDED DATE</th>


                        </tr>
                    </thead>
                    <tbody id="tbodyViewProds">

                    </tbody>


                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              
            </div>
        </div>
    </div>
</div>

@section Scripts {
	<script src="~/js/admin_dashboard/sellerdetails.js"></script>
}
