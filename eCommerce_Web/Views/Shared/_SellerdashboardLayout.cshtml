<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

    <script src="~/lib/jquery/jquery.min.js"></script>
    <style>
        .nav-item-bg {
            border-bottom: 1px solid #ccc; /* Change the color and style as needed */
            padding: 10px;
        }

        .nav-link {
            font-size: 20px; /* Increase font size */
            line-height: 30px; /* Increase line height */
            color: #000000 !important
        }

            .nav-link:hover {
                color: #a25858 !important; /* Change font color to #a25858 on hover and when active */
            }

        .nav-item-bg:hover {
            background-color: #e4e4e4; /* Change to desired background color on hover */
            border-radius: 10px;
            transition: background-color 0.3s; /* Add smooth transition effect */
        }

        .nav-item-bg.active {
            background-color: #e4e4e4; /* Change to desired background color on hover */
            border-radius: 10px;
            color: #a25858 !important; /* Set font color for active state */
        }

        .sidebar_layout {
            float: left;
            width: 230px; /* Adjust the width of the sidebar as needed */
            height: 100%; /* Adjust the height of the sidebar as needed */
            background-color: #f0f0f0;
        }

        .content_page {
            margin-left: 250px; /* Adjust the margin to ensure content does not overlap with sidebar */
            padding: 50px;
        }
    </style>
</head>
<body>
    <div class="loader-wrapper d-none" id="loader">
        <div class="loader"></div>
    </div>
    <section class="sidebar_layout">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 px-0 bg-light shadow" style="height: 100vh;">
                    <div class="pt-3 pb-4 px-3">
                        <div class="w-100 nav-item-bg">
                            <a href="#" class="nav-link align-middle px-0" onclick="toggleActive(this)">
                                <i class="fa fa-home" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </div>
                        @* <div>
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                        <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                        </a>
                        <div class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                        <div class="w-100">
                        <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 1 </a>
                        </div>
                        <div>
                        <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 2 </a>
                        </div>
                        </div>
                        </div> *@
                        
                        
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/ProductMaster" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Product Master</span>
                            </a>
                        </div>
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Account" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Account</span>
                            </a>
                        </div>
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Review" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Reviews</span>
                            </a>
                        </div>


                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Notification" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Notifications</span>
                            </a>
                        </div>
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Order" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Orders</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/custom_alert/jquery.bootstrap-growl.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/common.js"></script>
    @RenderSection("Scripts", false)
    <script>
        function toggleActive(element) {
            var parent = element.closest('.nav-item-bg');
            var siblings = parent.parentElement.querySelectorAll('.nav-item-bg');
            siblings.forEach(function (sibling) {
                sibling.classList.remove('active');
            });

            parent.classList.add('active');
        }
    </script>
</body>
</html>
