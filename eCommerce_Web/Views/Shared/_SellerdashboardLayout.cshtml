<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

    <script src="~/lib/jquery/jquery.min.js"></script>
  
</head>
<body>
    <div class="loader-wrapper d-none" id="loader">
        <div class="loader"></div>
    </div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <img src="~/image/logo2.jpg" width="70" />
            <div class="container-fluid">

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    
                    <ul class="navbar-nav">
                        <!-- User Image -->
                        <!-- Logout Button -->
                        <li class="nav-item">
                            <a class="btn btn-warning" onclick="logoutUser()">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="sidebar_layout fixed-top" style="margin-top:78px">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 px-0 bg-light shadow" style="height: 100vh;">
                    <div class="pt-3 pb-4 px-3">
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Account" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa-solid fa-user"></i> <span class="ms-1 d-none d-sm-inline">Profile</span>
                            </a>
                        </div>
                        @* <div>
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                        <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                        </a>
                        <div class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                        <div class="w-100">
                        <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 1 </a>
                        </div>
                        <div>
                        <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 2 </a>
                        </div>
                        </div>
                        </div> *@
                        
                        
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/ProductMaster" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa-solid fa-cloud-arrow-up"></i> <span class="ms-1 d-none d-sm-inline">Product Master</span>
                            </a>
                        </div>
                        <div class="w-100 nav-item-bg">
                            <a href="~/SellerDashboard/Notification" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa-solid fa-bell"></i> <span class="ms-1 d-none d-sm-inline">Notifications</span>
                            </a>
                        </div>
                        <div class="w-100 nav-item-bg d-none">
                            <a href="~/SellerDashboard/Review" class="nav-link px-0 align-middle" onclick="toggleActive(this)">
                                <i class="fa fa-table" aria-hidden="true"></i> <span class="ms-1 d-none d-sm-inline">Reviews</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/custom_alert/jquery.bootstrap-growl.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/common.js"></script>
    @RenderSection("Scripts", false)

</body>
</html>
